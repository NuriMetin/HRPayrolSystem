@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "EmployeeList";
}
<div class="container">
    <div style="overflow-x:auto;">
        <div class="d-flex">
            <select class="form-control col-md-3" id="selectFor">
                <option>Searh for</option>
                <option value=":nth-child(2)">Name</option>
                <option value=":nth-child(3)">Surname</option>
                <option value=":nth-child(4)">Father Name</option>
            </select>
            <div class="form-group col-md-3">
                <input type="text" class="form-control" id="txtSearch" placeholder="Searh" />
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Father Name</th>
                    <th>Born</th>
                    <th>Education</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody id="append" class="table table-striped">

                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/images/@item.Image" style="width:50px; height:50px; border:.2px solid black; border-radius:15px; text-align:center; margin-top:10px;" alt="" /></td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.FatherName</td>
                        <td>@item.Born.ToShortDateString()</td>
                        <td>@item.EducationText</td>
                        <td>
                            <div class="d-flex">
                                <a asp-action="Details" asp-controller="Employee" asp-route-id="@item.ID" class="btn btn-default text-success">Details </a>
                                <a asp-action="Edit" asp-controller="Employee" asp-route-id="@item.ID" class="btn btn-default text-primary">Edit </a>
                                <form asp-action="Delete" asp-controller="Employee" method="post" asp-route-id="@item.ID">
                                    <input type="hidden" name="ID" value="@item.ID" />
                                    <input type="submit" value="Delete" class="btn btn-default text-danger" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <input type="hidden" class="skip" id="total" value="@ViewBag.SkipCount" />
</div>
