@model  ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}

<div class=" container">
    <form asp-controller="Account" asp-action="ChangePassword" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Old Pasword</label>
                <input type="password" class="form-control" asp-for="OldPassword" />
                <span class="text-danger" asp-validation-for="OldPassword"></span>
            </div>
            <div class="form-group">
                <label class="control-label">New Pasword</label>
                <input type="password" class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirm New Pasword</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </form>
</div>