@model IEnumerable<Account>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <tr>
        <td>@item.Name</td>
        <td>@item.Surname</td>
        <td>@item.Position</td>
        <td>@item.Department</td>
        <td class="d-flex">
            <form asp-action="AddAccount" asp-controller="BankAccount" method="post" asp-route-id="@item.WorkerId">
                <input type="hidden" name="ID" value="@item.WorkerId" />
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </form>
        </td>
    </tr>
}
