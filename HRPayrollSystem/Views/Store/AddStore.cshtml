@model StoreViewModel
@{
    ViewData["Title"] = "StoreSale";
}

<h2>StoreSale</h2>

<div class="container">
    <div style="overflow-x:auto;">
        <div class="d-flex">
            <select class="form-control col-md-2" id="selectFor">
                <option>Select for</option>
                <option value=":nth-child(1)">Name</option>
            </select>
            <div class="form-group col-md-3">
                <input type="search" class="form-control" id="txtSearch" placeholder="Store name" />
            </div>
            <div class="col-md-7">
                <form asp-controller="Store" asp-action="AddStore">
                    <div class="form-group">
                        <select class="form-control" asp-for="SelectedCompany" asp-items="@(new SelectList(Model.Companies,"ID","Name"))">
                            <option value="">--Select Company--</option>
                        </select>
                        <span asp-validation-for="SelectedCompany" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Name"></label>
                        <input class="form-control" asp-for="@Model.Name" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/js/index.js"></script>