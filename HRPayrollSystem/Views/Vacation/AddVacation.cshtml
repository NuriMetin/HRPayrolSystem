@model VacationViewModel
@{
    ViewData["Title"] = "AddVacation";
}

<h2>Add Vacation</h2>

<div class="container d-flex">
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <form method="post" asp-action="AddVacation" asp-controller="Vacation">
            <div class="text-danger red" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" class="form-control" asp-for="WorkerId" />
            <div class="form-group">
                <input class="form-control" asp-for="WorkerAccount" disabled />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="StartDate"></label>
                <input class="form-control" asp-for="StartDate" type="date" />
                <span class="text-danger red" asp-validation-for="StartDate"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="EndDate"></label>
                <input class="form-control" asp-for="EndDate" type="date" />
                <span class="text-danger red" asp-validation-for="EndDate"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

