@model AddAbsens
@{
    ViewData["Title"] = "AddAbsens";
}

<h2>AddAbsens</h2>

<div class="container d-flex">
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <form method="post" asp-action="AddAbsens" asp-controller="Absens">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" class="form-control" asp-for="WorkerId" />
            <div class="form-group">
                <input class="form-control" asp-for="WorkerAccount" disabled />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Absens"></label>
                <select class="form-control" asp-for="SelectedAbsens" asp-items="@(new SelectList(Model.Absens,"ID","Name"))">
                    <option value="">--Select Absens--</option>
                </select>
                <span asp-validation-for="SelectedAbsens" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Reason"></label>
                <textarea class="form-control" type="text" asp-for="Reason" style="hyphens:unset;"></textarea>
                <span class="text-danger" asp-validation-for="Reason"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Absens" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
