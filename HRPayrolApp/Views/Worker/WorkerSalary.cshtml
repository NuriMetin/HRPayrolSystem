@model HRPayrolApp.Models.ViewModels.WorkerView
@{
    ViewData["Title"] = "WorkerSalary";
}
<div class="col-md-12">
    <div style="margin-top:10px;">
        <form asp-action="WorkerSalary">
            <table class="table">
                <thead>
                    <tr>
                        <th style="padding:0; z-index:2;"></th>
                        <th style="padding:0; z-index:2;"></th>
                        <th style="padding:0; z-index:2;"></th>
                        <th style="padding:0; z-index:2;"></th>
                        <th style="padding:0; z-index:2;"></th>
                        <th style="padding:0; z-index:2;"></th>
                        <th>Select</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th>Department</th>
                        <th>Bonus</th>
                        <th>Monthly Salary</th>
                        <th>Excusable Absens</th>
                        <th>UnExcusable Absens</th>
                        <th>Total Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AvialableWorkers.Capacity; i++)
                    {
                        <tr>
                            <td style="padding:0; z-index:2;">@Html.HiddenFor(x => Model.AvialableWorkers[i].EmployeeId)</td>
                            <td style="padding:0; z-index:2;">@Html.HiddenFor(x => Model.AvialableWorkers[i].TotalSalary)</td>
                            <td style="padding:0; z-index:2;">@Html.HiddenFor(x => Model.AvialableWorkers[i].OldCalculate)</td>
                            <td style="padding:0; z-index:2;">@Html.HiddenFor(x => Model.AvialableWorkers[i].Name)</td>
                            <td style="padding:0; z-index:2;">@Html.HiddenFor(x => Model.AvialableWorkers[i].Surname)</td>
                            <td style="padding:0; z-index:2;">@Html.HiddenFor(x => Model.AvialableWorkers[i].Position)</td>
                            <td>
                                @Html.CheckBoxFor(it => Model.AvialableWorkers[i].IsChecked)
                            </td>
                            <td>@Model.AvialableWorkers[i].Name</td>
                            <td>@Model.AvialableWorkers[i].Surname</td>
                            <td>@Model.AvialableWorkers[i].Email</td>
                            <td>@Model.AvialableWorkers[i].Position</td>
                            <td>@Model.AvialableWorkers[i].Department</td>
                            <td>@Model.AvialableWorkers[i].Bonus</td>
                            <td>@Model.AvialableWorkers[i].MonthlySalary</td>
                            <td>@Model.AvialableWorkers[i].ExcusableAbsens</td>
                            <td>@Model.AvialableWorkers[i].UnExcusableAbsens</td>
                            <td>@Model.AvialableWorkers[i].TotalSalary</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-default calc" />
            </div>

            
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".work").hide();
        $(".calc").click(function () {
            $(".work").show();
        })
    
    }
</script>