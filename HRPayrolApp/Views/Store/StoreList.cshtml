@model IEnumerable<StoreViewModel>
@{
    ViewData["Title"] = "StoreList";
}

<h2>StoreList</h2>
<form asp-action="StoreBonus" asp-controller="Bonus" method="get">
    <div class="d-flex">
        <select class="form-control col-md-3" id="selectFor">
            <option>Select for</option>
            <option value=":nth-child(1)">Name</option>
        </select>
        <div class="form-group col-md-3">
            <input type="text" class="form-control" id="txtSearch" placeholder="Write..." />
        </div>
        <div class="form-group col-md-3">
            <input type="text" value="Select date"
                   class="datepicker-here form-control"
                   data-language='en'
                   data-min-view="months"
                   data-view="months"
                   data-date-format="MM yyyy" name="selectedDate" />
        </div>
        <div class="form-group">
            <input type="submit" value="Get" class="btn btn-primary calc" />
        </div>
    </div>
</form>
<table class="table table-striped">
    <thead style="font-weight:bold;">
        <tr>
            <td>Name</td>
            <td>Company Name</td>
            <td>Operations</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Company.Name</td>
                <td>
                    <div class="d-flex">
                        <form asp-action="Edit" asp-controller="Store" method="get" asp-route-id="@item.ID" class="btn-padding">
                            <input type="hidden" name="ID" value="@item.ID" />
                            <input type="submit" value="Edit" class="btn btn-primary" />
                        </form>
                        <form asp-action="Delete" asp-controller="Store" method="post" asp-route-id="@item.ID" class="btn-padding">
                            <input type="hidden" name="ID" value="@item.ID" />
                            <input type="submit" value="Delete" class="btn btn-danger btn-padding" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script src="~/js/index.js"></script>
<script src="~/dist/js/datepicker.min.js"></script>