@model IEnumerable<EmployeList>
@{
    ViewData["Title"] = "EmployeeList";
}
<div class="container">
    <div style="overflow-x:auto;">
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Father Name</th>
                    <th>Born</th>
                    <th>Education</th>
                    <th>Gender</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td><img src="~/images/@item.Image" style="width:50px; height:50px; border:.2px solid black; border-radius:15px; text-align:center; margin-top:10px;" alt="" /></td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.FatherName</td>
                    <td>@item.Born.ToShortDateString()</td>
                    <td>@item.Education</td>
                    <td>@item.Gender</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@item.ID">Edit |</a>
                        <form asp-action="Delete" asp-controller="Employee" method="post" asp-route-id="@item.ID">
                            <input type="hidden" name="ID" value="@item.ID" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
